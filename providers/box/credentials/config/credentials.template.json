{
  "client_id": "[** CLIENT_ID **]",
  "client_secret": "[** CLIENT_SECRET **]",

  "redirect_uri": "http://localhost",

  "protocol": "https",
  "api_version": "2.0",

  "api_hostname": "api.box.com",
  "api_upload_hostname": "upload.box.com",

  "api_base": "${PROTOCOL}://${API_HOSTNAME}",
  "api_upload_base": "${PROTOCOL}://${API_UPLOAD_HOSTNAME}/api",

  "api_oauth2_base": "${API_BASE}/oauth2",

  "auth_url": "${API_OAUTH2_BASE}/authorize",
  "auth_token_url": "${API_OAUTH2_BASE}/token",
  "auth_refresh_url": "${API_OAUTH2_BASE}/token#refresh",
  "auth_revoke_url": "${API_OAUTH2_BASE}/revoke",

  "auth_user_url": "${API_BASE}/${API_VERSION}/users/me"
}
